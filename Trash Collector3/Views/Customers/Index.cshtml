@model IEnumerable<Trash_Collector3.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}




<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-3">
            <h2 class="text-info">Account Overview</h2>
        </div>

    </div>
    <br />
    <div>

    </div>
    <div>
        @if (Model.Count() > 0)
        {
            <table id="tblData" class="table table-striped border">

                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ZipCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PickUpDay)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OneTimePickUp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartOfSuspension)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndOfSupspension)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>

                    <th></th>
                </tr>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.ZipCode)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.PickUpDay)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.OneTimePickUp)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.StartOfSuspension)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.EndOfSupspension)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Balance)
                            </td>

                            <td colspan="3" style=" width:10px">
                                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p class="text-center">No Info To Display. Please Setup Your Account Below</p><div class=" text-center">
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> &nbsp; Account Setup</a>/>
            </div>


        }
    </div>
</div>