@model IEnumerable<Trash_Collector3.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <br /><br />
    <div class="border backgroundWhite">
        @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Account Overview</h2>
            </div>
            
            <table id="tblData" class="table table-striped border">
                <thead>
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ZipCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PickUpDay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OneTimePickUp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartOfSuspension)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndOfSupspension)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Balance)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZipCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PickUpDay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OneTimePickUp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartOfSuspension)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndOfSupspension)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)

                            <td>
                                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>