                    <label asp-for="StartOfSuspension" class="control-label"></label>
                    <input asp-for="StartOfSuspension" class="form-control" />
                    <span asp-validation-for="StartOfSuspension" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndOfSupspension" class="control-label"></label>
                    <input asp-for="EndOfSupspension" class="form-control" />
                    <span asp-validation-for="EndOfSupspension" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Balance" class="control-label"></label>
                    <input asp-for="Balance" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
